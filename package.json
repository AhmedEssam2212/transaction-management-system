{
  "name": "transaction-management-system",
  "version": "1.0.0",
  "description": "Microservices-based transaction management system with distributed transaction guarantees",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e -w services/transaction-view-service",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down -v"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
